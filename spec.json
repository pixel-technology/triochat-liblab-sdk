{
  "openapi": "3.0.0",
  "info": {
    "title": "Triochat SDK API",
    "version": "1.0"
  },
  "paths": {
    "/sdk/send-message": {
      "post": {
        "operationId": "SdkController_sendMessage",
        "tags": ["SDK"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SdkSendMessageDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Message sent successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/SdkSendMessageDto"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request"
          },
          "401": {
            "description": "Unauthorized - Invalid or missing token"
          }
        },
        "security": [
          {
            "PAT-auth": []
          }
        ]
      }
    }
  },
  "components": {
    "securitySchemes": {
      "PAT-auth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Context": {
        "type": "object",
        "properties": {}
      },
      "SdkSendMessageDto": {
        "type": "object",
        "properties": {
          "country_code": {
            "type": "string"
          },
          "phone_number": {
            "type": "string"
          },
          "messageType": {
            "type": "string"
          },
          "template_name": {
            "type": "string"
          },
          "messageText": {
            "type": "string"
          },
          "components": {
            "type": "array",
            "items": {
              "type": "object"
            }
          },
          "context": {
            "$ref": "#/components/schemas/Context"
          },
          "mediaMessage": {
            "type": "object"
          },
          "media": {
            "type": "object"
          }
        },
        "required": [
          "country_code",
          "phone_number",
          "messageType",
          "template_name",
          "messageText",
          "components",
          "context"
        ]
      }
    }
  }
}
